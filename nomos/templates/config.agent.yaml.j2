# Nomos Agent Configuration
name: {{ name }}
persona: |
  {{ persona }}
start_step_id: {{ start_step_id }}

steps:
{% for step in steps %}
  - step_id: {{ step.step_id }}
    description: |
      {{ step.description }}
{% if step.available_tools %}
    available_tools:
{% for tool in step.available_tools %}
      - {{ tool }}
{% endfor %}
{% endif %}
{% if step.routes %}
    routes:
{% for route in step.routes %}
      - target: {{ route.target }}
        condition: {{ route.condition }}
{% endfor %}
{% endif %}
{% endfor %}

{% if llm_config %}
llm:
  provider: {{ llm_config.provider }}
  model: {{ llm_config.model }}
{% endif %}

logging:
  enable: true
  handlers:
    - type: stderr
      level: INFO
      format: "{time:YYYY-MM-DD at HH:mm:ss} | {level} | {message}"
